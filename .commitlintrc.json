{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      ["feat", "fix", "docs", "style", "refactor", "test", "chore", "revert"]
    ],
    "subject-case": [2, "always", "sentence-case"],
    "header-max-length": [2, "always", 100],
    "subject-pattern": [
      2,
      "always",
      "^[A-Z]+-[0-9]+: .+"
    ],
    "subject-required": [2, "always"]
  }
}
